{
  "extends": "airbnb/base",
  "env": {
    "browser": true,
    "es6": true,
    "shared-node-browser": true
  },
  "rules": {
    "no-console": 0,
    "strict": 0,
    "consistent-return": 0,
    "eqeqeq": [2, "smart"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "max-len": [1, 120, 2, {
      "ignoreUrls": true,
      "ignoreComments": true
    }],
    "no-param-reassign": [1, { "props": false }],
    "comma-dangle": [2, "never"],
    "prefer-const": 0,
    "no-unused-vars": 1,
    "no-underscore-dangle": 0
  },
  "globals": {
    "CONFIG": true,
    "angular": true,
    "firebase": true
  }
}
